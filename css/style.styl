#playlist
  padding 0 20px 40px 0
  width 640px
  margin 0 auto
  .dates
    text-align center
    ul
      li
        display inline-block
        padding 0 7px
        &.disabled
          a
            pointer-events none
            color gray
    .current
      a
        font-size 48px
        &:hover
          text-decoration none
  a
    text-decoration none
    &:hover
      text-decoration underline
  .timeline
    padding 0
    margin 12px 0
    width 100%
  .hours
    text-align center
    margin-bottom 40px
    & > *
      display inline-block
      margin 0 15px
    & > *:first-child
      margin-left 0
    & > *:last-child
      margin-right 0
    & > .active
      padding 4px 5px
      background black
      a
        color white
        &:hover
          text-decoration none
    a
      display inline-block
      font-size 15px
  .songs
    & > *
      padding 17px 0 17px 17px
      border-bottom 1px solid #d7d7d7
      span
        padding-right 30px

#playlist ul,
#playlist ul li
  list-style none
  padding 0
  margin 0

#playlist .dates .prev a,
#playlist .dates .next a
  font-size 36px

#playlist .dates .prev-prev a,
#playlist .dates .next-next a
  font-size 26px

